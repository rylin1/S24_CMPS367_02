#include &lt;iostream&gt;
#include &lt;string&gt;
#include &lt;cstdlib&gt;
#include &lt;ctime&gt;
using namespace std;
struct BankAccount {
string name;
double balance;
int accountNumber;
static int nextAccountNumber;
};
int BankAccount::nextAccountNumber = 0;
void createAccount(BankAccount&amp; account) {
cout &lt;&lt; &quot;Enter your name: &quot;;
cin &gt;&gt; account.name;
cout &lt;&lt; &quot;Enter your initial balance: &quot;;
cin &gt;&gt; account.balance;
srand(time(0));
account.accountNumber = ++BankAccount::nextAccountNumber;
cout &lt;&lt; &quot;Congratulations &quot; &lt;&lt; account.name &lt;&lt; &quot;! You have successfully opened your
new bank account with an initial balance of $&quot; &lt;&lt; account.balance &lt;&lt; &quot;. Your account
number is &quot; &lt;&lt; account.accountNumber &lt;&lt; &quot;.&quot; &lt;&lt; endl;
}
