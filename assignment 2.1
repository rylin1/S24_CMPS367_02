int accountNumber;
cout &lt;&lt; &quot;Enter the account number: &quot;;
cin &gt;&gt; accountNumber;
if (accountNumber == account.accountNumber) {
double depositAmount;
cout &lt;&lt; &quot;Enter the amount that you would like to deposit: &quot;;
cin &gt;&gt; depositAmount;
account.balance += depositAmount;

cout &lt;&lt; &quot;Congratulations &quot; &lt;&lt; account.name &lt;&lt; &quot;! You have successfully deposited
the amount of $&quot; &lt;&lt; depositAmount &lt;&lt; &quot; in your account #&quot; &lt;&lt; account.accountNumber
&lt;&lt; &quot;. Your current balance is $&quot; &lt;&lt; account.balance &lt;&lt; &quot;.&quot; &lt;&lt; endl;
} else {
cout &lt;&lt; &quot;No account number exists!&quot; &lt;&lt; endl;
}
}
